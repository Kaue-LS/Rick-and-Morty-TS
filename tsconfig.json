{
  "include": [
    "./**/*",
    "../**/*"
  ],
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}